@model CreateDomainViewModel

@{
    ViewData["Title"] = "Create Domain";
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="name" class="form-label"></label>
        <input asp-for="name" class="form-control">
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="buyTime" class="form-label"></label>
        <input asp-for="buyTime" class="form-control">
        <span asp-validation-for="buyTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="expiresOn" class="form-label"></label>
        <input asp-for="expiresOn" class="form-control">
        <span asp-validation-for="expiresOn" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Create</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}